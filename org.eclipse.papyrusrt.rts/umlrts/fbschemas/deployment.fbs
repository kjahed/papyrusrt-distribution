namespace FBSchema;

table Deployment {
	hosts: [Host] (required);
	controllers: [Controller] (required);
	capsules: [Capsule] (required);
}

table Capsule {
	name: string (required);
	controller: string (required);	
}

table Controller {
	name: string (required);
	host: string (required);
}

table Host {
	name: string (required);
	address: string (required);
}

root_type Deployment;